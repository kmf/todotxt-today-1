#!/bin/bash

# Stop verbose lines
TODOTXT_VERBOSE=0

# Get the main action
action=$1
shift

[ "$action" = "usage" ] && {
    echo "  Today's view: displays today's tasks"
    echo "    today"
    echo "      Shows tasks timed for today which are listed as t:YYYY-MM-DD"
    exit
}

TODAY_LIST=$(_list "$TODO_FILE" "t:$(date +%Y-%m-%d)")
if [ -n "${TODAY_LIST}" ]; then
    echo "==================================="
    echo "Tasks for today:"
    echo "==================================="
    echo "${TODAY_LIST}"
fi
